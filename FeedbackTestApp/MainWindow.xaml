<Window x:Class="FeedbackTestApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:fc="clr-namespace:FeedbackControls;assembly=FeedbackControls"
        xmlns:local="clr-namespace:FeedbackTestApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Window.Resources>
        <DataTemplate x:Key="DigitalOutputTemplate">
            <StackPanel Orientation="Horizontal">
                <fc:Led ColorOn="Green" ColorOff="Red" IsActive="{Binding IsEnabled}" Height="40" VerticalAlignment="Center"/>
                <TextBlock Text="{Binding Name}" VerticalAlignment="Center"/>
            </StackPanel>
        </DataTemplate>
    </Window.Resources>
    <DockPanel LastChildFill="False">
        <ItemsControl ItemsSource="{Binding DigitalOutput}" DockPanel.Dock="Left"
                      ItemTemplate="{StaticResource DigitalOutputTemplate}"/>
    </DockPanel>
</Window>
